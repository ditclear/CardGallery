<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:contex=".MainActivity">
    <View
        android:id="@+id/header_view_helper"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:background="@color/pink"
        />
    <View
        android:id="@+id/view_helper"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:background="@color/pink"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/Toolbar">

        <ImageView
            android:id="@+id/content_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@mipmap/ic_menu_90" />

        <vienan.app.cardgallery.view.CanaroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/lsq_color_white"
            android:textSize="@dimen/guillotine_item_text_size" />
        <ImageView
            android:id="@+id/swipe_card_button"
            style="@style/ImageView.Hamburger"
            android:layout_gravity="right"
            android:src="@drawable/ic_equalizer_white_24dp"/>
    </android.support.v7.widget.Toolbar>

    <com.twotoasters.jazzylistview.JazzyListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:padding="12dp"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:clipToPadding="false"
        android:fadeScrollbars="true"/>
    </LinearLayout>
    <View
        android:id="@+id/touch_interceptor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#ffffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:textSize="14sp"
            android:textColor="#000"
            android:lineSpacingExtra="4sp" />
    </LinearLayout>
    <com.alexvasilkov.foldablelayout.UnfoldableView
        android:id="@+id/unfoldable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/actionbar_add_icon"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        fab:fab_colorNormal="@color/pink"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple" />

    <io.codetail.widget.RevealFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <!-- Transform view -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer"
            android:background="@color/pink"
            android:visibility="gone">
            <!-- Put view you like -->
            <ImageButton
                android:id="@+id/capture_img"
                style="@style/ImageView.Hamburger"
                android:src="@mipmap/ic_photo_camera_white_36dp" />
            <vienan.app.cardgallery.view.CanaroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ChoosePic"
                android:textColor="@color/lsq_color_white"
                android:textSize="@dimen/guillotine_item_text_size" />
            <ImageButton
                android:id="@+id/add_from_album"
                style="@style/ImageView.Hamburger"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/expandable_selector_margin"
                android:src="@mipmap/ic_photo_library_white_36dp" />
        </android.support.v7.widget.Toolbar>

    </io.codetail.widget.RevealFrameLayout>
</FrameLayout>
